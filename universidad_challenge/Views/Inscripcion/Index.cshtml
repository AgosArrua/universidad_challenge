@model IEnumerable<universidad_challenge.Models.subjects>

@{
    ViewBag.Title = "Inscripción a materias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de materias</h2>


<table class="table">
    <tr>
        <th>
            Materia
        </th>
        <th>
            Descipcion
        </th>
        <th>
            Cupos disponibles
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.subject_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuposDisponibles)
            </td>
            <td>
                @Html.ActionLink("Detalles", "DetallesMateria", new { id = item.id_subject }) |
                @Html.ActionLink("Inscribirse", "InscripcionMateria", new { id = item.id_subject }, new { @class = "aConfirmar" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".aConfirmar").click(function (event) {
            if (!confirm("Confirmar inscripción")) {
                event.preventDefault();
            }
        });
    </script>
}
